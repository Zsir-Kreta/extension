{
    "manifest_version": 3,
    "name": "Zsír!Kréta",
    "description": "Legyan zsír a krétád!",
    "version": "1.0",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [{
        "matches": ["*://*.ovikreta.hu/*"],
        "js": ["contentScript.js"],
        "css": ["styles.css"]
    }],
    "web_accessible_resources": [{
        "resources": ["icons/*"],
        "matches": ["*://*.ovikreta.hu/*"]
    }],
    "browser_specific_settings": {
        "gecko": {
            "id": "zsirkreta@smmest3r.dev",
            "strict_min_version": "91.0"
        }
    }
}